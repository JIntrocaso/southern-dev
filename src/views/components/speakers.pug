link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css")
section.speakers
  header
    h1 Speakers
  div#bios
    each speaker in speakers
      div(class="bio" id=speaker["name"].split(' ').join('') )
        img(src="../images/speaker-" + speaker.image)
        .txt-container
          if speaker["social-media"]
            .social-media
              each val, index in speaker["social-media"]
                a(href=val)
                  i.fab(class="fa-" + index)
          h4= speaker.name
          input(type="button" class="btn btn-default" data-toggle="modal" data-target=`.myModal${speaker["name"].split(' ').join('')}` value="Learn More") 
          
        div(class=`modal fade myModal${speaker["name"].split(' ').join('')}` role="dialog")
          .modal-dialog 
            .modal-content 
              img(src="../images/speaker-" + speaker.image)
              .txt-container
                if speaker["social-media"]
                  .social-media
                    each val, index in speaker["social-media"]
                      a(href=val)
                        i.fab(class="fa-" + index)
                h4= speaker.name
                h5= speaker.company
                p= speaker["bio-short"]
              button.btn.btn-default(type='button' data-dismiss="modal") Close 

script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js")
