- var imageUrl = event.image
- var eventLocation = event.location.toLowerCase().split(' ').join('-')
- var speaker = event.speaker.split(' ').join('')


.event-display(class=eventLocation id=speaker + event.time)
  .event-content
    h4.event-title= event.title
    p.event-description= event.description
    a.event-details(href=`speakers.html#${speaker}`, style="text-decoration:none;")
      .flex-left
        img.event-image(src='../images/speaker-' + imageUrl)
        p.event-speaker-name(id=event.speaker.split(' ').join('')) #{event.speaker}
